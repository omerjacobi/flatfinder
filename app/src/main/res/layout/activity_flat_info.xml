    <TextView
        android:id="@+id/priceTag"
        android:layout_width="47dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/benchnine"
        android:text="PRICE"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/apartment_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/apartment_address" />

    <TextView
        android:id="@+id/roommateTag"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/benchnine"
        android:text="ROOMMATES"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/apartment_roommates"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTag" />

    <TextView
        android:id="@+id/messageTag"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/benchnine"
        android:text="MESSAGE"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/apartment_roommates"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roommateTag"
        app:layout_constraintVertical_bias="0.0" />

